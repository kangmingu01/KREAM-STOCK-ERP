<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="mapper.ErpAuthMapper">
    <!-- 조건 권한 추가 -->
    <insert id="insertErpAuth">
        insert into erp_auth
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="userid != null"> userid, </if>
            <if test="orgId != null"> orgId, </if>
            auth
        </trim>
        <trim prefix="values(" suffix=")" suffixOverrides=",">
            <if test="userid != null"> #{userid}, </if>
            <if test="orgId != null"> #{orgId}, </if>
            #{auth}
        </trim>
    </insert>

    <!-- 조건에 맞는 권한 삭제 -->
    <delete id="deleteAuth">
        delete from erp_auth
        <where>
            <if test="userid != null">
                userid = #{userid}
            </if>
            <if test="orgId != null">
                and orgId = #{orgId}
            </if>
        </where>
    </delete>

    <select id="selectAuthCount" resultType="int">
        select count(*) from erp_auth
        <if test="keyword != null and keyword != ''">
            <bind name="word" value="'%'+keyword+'%'"/>
            where ${column} like #{word}
        </if>
    </select>

    <select id="selectAuthList" resultType="ErpAuth">
        select * from (
        select rownum rn, erp_auth.* from (
        select userid, auth, orgId
        from erp_auth
        <if test="keyword != null and keyword != ''">
            <bind name="word" value="'%' + keyword + '%'"/>
            ${column} like #{word}
        </if>
        order by userid desc
        ) erp_auth order by rn desc
        )
        where rn between #{startRow} and #{endRow}
    </select>
</mapper>